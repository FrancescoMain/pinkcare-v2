# Production Environment Configuration
# Copy this file to .env.production and update with production values

# Database Configuration (Production)
# Use your production database credentials
DB_HOST=your-production-db-host
DB_PORT=5432
DB_NAME=PINKCARE_DB
DB_USER=your-db-user
DB_PASSWORD=your-secure-password
DB_SSL=true

# JWT Configuration
# IMPORTANT: Use a different, secure secret key in production
JWT_SECRET=your-very-long-and-secure-production-secret-key-here
JWT_EXPIRES_IN=7d

# Application Configuration
NODE_ENV=production
PORT=3002
CORS_ORIGIN=https://www.pinkcare.it
APP_URL=https://www.pinkcare.it
# API_URL is optional - defaults to APP_URL in production (same domain)
# API_URL=https://www.pinkcare.it

# Email Configuration
# Keep these values from legacy system or update if needed
SMTP_HOST=smtps.aruba.it
SMTP_PORT=465
SMTP_USER=no-reply@pinkcare.it
SMTP_PASS=server20!
FROM_EMAIL=PINKCARE <no-reply@pinkcare.it>

# Optional: Logging and Monitoring
LOG_LEVEL=info
